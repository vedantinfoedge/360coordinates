{
    "name": "indiapropertys/backend",
    "description": "India Propertys Backend API",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "google/cloud-vision": "^2.0",
        "phpmailer/phpmailer": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Services\\": "services/",
            "App\\Utils\\": "utils/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "discard-changes": true,
        "use-gitignore": true
    },
    "scripts": {
        "pre-install-cmd": [
            "@php -r \"if(file_exists('composer.lock') && !is_readable('composer.lock')) { unlink('composer.lock'); }\"",
            "@php -r \"if(file_exists('composer.lock')) { @chmod('composer.lock', 0644); }\""
        ]
    }
}
